<div class="text-center mt-5 mb-5">
 <h1><%= "#{@user.name}契約情報入力" %></h1>
</div>

<div class="row">
    <div class="col-md-6 offset-3 bg-light shadow p-5">
        <%= form_with model: @user, url: info_update_user_path(@user) , local: true, method: :patch do |f| %>
            <div class="form-group">
                <%= f.label :department %>
                <%= f.text_field :department, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label :start_work_time %>
                <%= f.time_field :start_work_time, class: 'form-control' %>
            </div>
             <div class="form-group">
                <%= f.label :finish_work_time %>
                <%= f.time_field :finish_work_time, class: 'form-control' %>
            </div>
            <div class="text-center mt-5">
                <%= f.submit '確定', class:'btn btn-primary btn-lg' %>
            </div>
        <% end %>
    </div>
</div>