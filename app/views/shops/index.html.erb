<div class="text-center mt-5 mb-5"><h1>拠点一覧</h1></div>

<table class="table table-bordered table-striped mb-5">
  <thead>
    <th class="w-25"></th>
    <th class="w-25"></th>
    <th class="text-center">拠点番号</th>
    <th class="text-center">拠点名</th>
    <th class="text-center">拠点種類</th>
  </thead>
  <tbody>
  </tbody>
</table>
<div class="bg-light p-3">
 <button class="btn btn-primary btn-lg" id="shopBtn">拠点情報追加</button>
</div>
<div id="drop" class="shadow p-3 text-center">
  <div class="row">
    <div class="col-md-8 offset-2">
      <%= form_with model: @shop, local:true do |f| %>
        <div class="form-group">
          <%= f.label :number %>
          <%= f.number_field :number, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :number, class: 'form-control' %>
        </div>

        <div class="form-group mb-5">
          <%= f.label :category %>
          <%= f.text_field :category, class: 'form-control' %>
        </div>
        <div class="text-center mt-3">
          <%= f.submit '追加', class: 'btn btn-primary btn-lg' %>
        </div>
     <% end %>
    </div>
  </div>
  
</div>

<style>
  #drop{
    display: 'none';
  }
</style>
